@model IEnumerable<IHCATCadClientes.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Clientes Cadastrados</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar Novo Cliente</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.id">Editar</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.id">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
